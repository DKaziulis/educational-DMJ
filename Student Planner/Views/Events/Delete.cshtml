@model Event

@{
    ViewBag.Title = "Delete Event";
}

<h2>Delete</h2>

<p>Are you sure you want to delete this event?</p>


<dl class="row">
    <dt class="col-sm-3">
        @Html.DisplayNameFor(model => model.Name)
    </dt>
    <dd class="col-sm-9">
        @Html.DisplayFor(model => model.Name)
    </dd>

    <dt class="col-sm-3">
        @Html.DisplayNameFor(model => model.BeginDate)
    </dt>
    <dd class="col-sm-9">
        @Html.DisplayFor(model => model.BeginDate)
    </dd>

    <dt class="col-sm-3">
        @Html.DisplayNameFor(model => model.Description)
    </dt>
    <dd class="col-sm-9">
        @Html.DisplayFor(model => model.Description)
    </dd>
</dl>


@using (Html.BeginForm("DeleteConfirmed", "Events", new { id = Model.Id }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.DayId)

    <input type="hidden" name="ReturnUrl" id="ReturnUrl" value="@ViewBag.ReferringUrl">

    <div >
        <button type="submit" style="margin-right: 100px;" class="btn btn-danger">Delete</button>
        <a href="javascript:void(0);" onclick="goBack()" class="btn btn-secondary">Cancel</a>
    </div>

    @section scripts {
    <script>
        function goBack() {
            window.history.back();
        }
    </script>
}
}
